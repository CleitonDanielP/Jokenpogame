from colorama import init, Fore, Back
from random import randint
from time import sleep
import emoji
import pyfiglet
import time

init(autoreset=True)

#declaraÃ§Ã£o de variaveis
jokenpo = pyfiglet.figlet_format("JoKenPo", font="rectangles")
opÃ§Ãµes = ('Pedra', 'Papel', 'Tesoura')
placar_jogador = 0
placar_computador = 0
rodadas = 0
#Menu de opÃ§Ãµes de escolha.
while True:
    #sorteia uma 1 nÃºmero inteiro para ser a jogada do computador
    computador = randint(0, 2)
    print(Fore.LIGHTMAGENTA_EX + 'â–©' * 28)
    print(jokenpo)
    print(Fore.LIGHTMAGENTA_EX + 'CONSEGUE GANHAR DA MÃQUINA?')
    print(Fore.LIGHTMAGENTA_EX + 'â–¶ MENU')
    print(Fore.LIGHTMAGENTA_EX + 'â–©' * 28)
    print(Back.BLACK + 'ğ„ğ’ğ‚ğğ‹ğ‡ğ€ ğ‚ğğŒ ğ’ğ€ğğ„ğƒğğ‘ğˆğ€ ')
    print(Fore.LIGHTMAGENTA_EX + 'â–©' * 28)
    print(Fore.LIGHTBLUE_EX + '''Suas opÃ§Ãµes sÃ£o:
    [ 0 ] PEDRA
    [ 1 ] PAPEL
    [ 2 ] TESOURA''')
    #Recebe o input de escolha do jogador
    jogador = int(input(Fore.LIGHTMAGENTA_EX+ 'Qual jogada deseja realizar? '))
    if (jogador > 2):
        print('OpÃ§Ã£o invalida, coloque uma das 3 OpÃ§Ãµes: 0,1,2.')
        break

    #Simula o gesto realizado no jogo JO KEN PO com as mÃ£os
    print(Back.BLACK + emoji.emojize('ğ‘±ğ‘¶:raised_fist:'))
    sleep(1)
    print(Back.BLACK  + emoji.emojize('ğ‘²ğ‘¬ğ‘µ:hand_with_fingers_splayed:'))
    sleep(1)
    print(Back.BLACK + emoji.emojize('ğ‘·ğ‘¶:victory_hand:'))
    sleep(2)
    #imprime na tela a escolha de cada jogador
    print(Fore.LIGHTMAGENTA_EX +'â‹°' * 30)
    print(Fore.LIGHTRED_EX +'ğ˜– ğ˜Šğ˜°ğ˜®ğ˜±ğ˜¶ğ˜µğ˜¢ğ˜¥ğ˜°ğ˜³ ğ˜¦ğ˜´ğ˜¤ğ˜°ğ˜­ğ˜©ğ˜¦ğ˜¶ {}'.format(opÃ§Ãµes[computador]))
    print(Fore.LIGHTBLUE_EX+'ğ‘½ğ‘¶ğ‘ªğ‘¬ ğ‘¬ğ‘ºğ‘ªğ‘¶ğ‘³ğ‘¯ğ‘¬ğ‘¼ {}'.format(opÃ§Ãµes[jogador]))
    print(Fore.LIGHTMAGENTA_EX +'â‹°' * 30)
    #imprime o resultado do jogo
    if computador == jogador:
        print(Fore.LIGHTYELLOW_EX + ( 'EITA! DEU â¨EMPATEâ¬'))
        print(Fore.LIGHTYELLOW_EX + ('JOGUE NOVAMENTE'))
        print(Fore.LIGHTYELLOW_EX + ('DICA: Tente usar a psicologia reversa'))
        print(Fore.LIGHTBLUE_EX + ('AGUARDE ATÃ‰ A PRÃ“XIMA RODADA'))
        sleep(7)
    elif (jogador == 0 and computador == 2) or (jogador == 1 and computador == 0) or (jogador == 2 and computador == 1):
        print(Fore.LIGHTGREEN_EX + 'â™›PARABÃ‰NS VOCÃŠ â¨ğ—©ğ—˜ğ—¡ğ—–ğ—˜ğ—¨â¬! VAMOS PARA A PRÃ“XIMA RODADA?')
        print(Fore.LIGHTBLUE_EX + ('AGUARDE ATÃ‰ A PRÃ“XIMA RODADA'))
        placar_jogador += 1
        sleep(7)
    else:
        print(Fore.LIGHTRED_EX + 'ESSA NÃƒO...VOCÃŠ â¨PERDEUâ¬ TENTE NOVAMENTE COM OUTRA ESTRATÃ‰GIA!.')
        print(Fore.LIGHTBLUE_EX + ('AGUARDE ATÃ‰ A PRÃ“XIMA RODADA'))
        placar_computador += 1

        sleep(7)

    rodadas += 1
#Limitador de rodadas - limitado a 3 rodadas.
    if rodadas == 3:
        print(Fore.LIGHTMAGENTA_EX + emoji.emojize('à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿'))
        print(Fore.LIGHTMAGENTA_EX + emoji.emojize('à¿à¿à¿à¿â–¶ğ—™ğ—œğ—  ğ——ğ—˜ ğ—ğ—¢ğ—šğ—¢:alarm_clock:â—€à¿à¿à¿à¿'))
        print(Fore.LIGHTMAGENTA_EX + emoji.emojize('à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿à¿'))
        print(f"\nPLACAR FINAL DO JOGO: Jogador {placar_jogador} x {placar_computador} Computador")
        if placar_jogador > placar_computador:
            print(Fore.LIGHTGREEN_EX + 'ğğ€ğ‘ğ€ğğ„Ìğğ’ ğ•ğğ‚ğ„ ğ†ğ€ğğ‡ğğ” ğğ ğ‘±ğ‘¶ğ‘²ğ‘¬ğ‘µğ‘·ğ‘¶, JOGUE MAIS UMA PARTIDA. ')
        elif placar_computador > placar_jogador:
            print(Fore.LIGHTRED_EX + 'ğ•ğğ‚ğ„ ğğ„ğ‘ğƒğ„ğ” ğğ€ğ‘ğ€ ğ€ ğ‘´ğ‘¨ğ‘¸ğ‘¼ğ‘°ğ‘µğ‘¨ TENTE NOVAMENTE.')
        else:
            print(Fore.LIGHTYELLOW_EX + 'ğ„ğŒğğ€ğ“ğ„! ğğ€ğ‘ğ„ğ‚ğ„ ğğ”ğ„ ğ•ğğ‚ğ„ ğ„ ğ€ ğŒğ€ğğ”ğˆğğ€ ğğ„ğğ’ğ€ğ‘ğ€ğŒ ğˆğ†ğ”ğ€ğˆğ’.')
#Deseja jogar novamente (sim) ou (nÃ£o).
        prosseguir = input('Deseja jogar novamente? (S/N)').strip().upper()
        if prosseguir == 'S':
            placar_jogador = 0
            placar_computador = 0
            rodadas = 0
            continue
        else:
            print('Obrigado por jogar JO KEN PO, te vejo na prÃ³xima.')
            print(Fore.LIGHTMAGENTA_EX + 'á¨‘' * 39)
            break
